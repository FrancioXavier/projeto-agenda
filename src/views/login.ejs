<%- include('includes/head') %>
<%- include('includes/navbar') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
        <h1 class="text-center">Criar conta ou entrar</h1>
        <p class="text-center lead">Faça login ou crie sua conta</p>

        <%- include('includes/messages') %>

        <div class="row">

            <div class="col-lg">
                <h4>Faça seu cadastro</h4>
                <p>Caso você ainda não tenha uma conta, preencha o formulário abaixo: </p>
                <form action="login/register" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group">
                      <label>Seu email</label>
                      <input type="email" class="form-control"aria-describedby="emailHelp" name="email">
                    </div>

                    <div class="form-group">
                        <label>Sua senha</label>
                        <input type="password" class="form-control" name="password">
                      </div>
                    <button type="submit" class="btn btn-primary">Confirmar</button>
                </form>
            </div>


                <div class="col-lg">
                    <h4>Faça seu login</h4>
                    <p>Caso você já tenha uma conta, faça o login abaixo: </p>
                    <form action="login/login" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                          <label>Seu email</label>
                          <input type="email" class="form-control"aria-describedby="emailHelp" name="email">
                        </div>
    
                        <div class="form-group">
                            <label>Sua senha</label>
                            <input type="password" class="form-control" name="password">
                          </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </form>
                </div>

        </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer') %>